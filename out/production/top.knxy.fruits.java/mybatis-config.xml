<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="db_t.properties" />
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper class="top.knxy.fruits.Service.Login.DBOperation"/>
        <mapper class="top.knxy.fruits.Service.Index.DBOperation"/>
        <mapper class="top.knxy.fruits.Service.Good.DBOperation"/>
        <mapper class="top.knxy.fruits.Service.Order.DBOperation"/>
        <mapper class="top.knxy.fruits.Service.GoodType.DBOperation"/>

    </mappers>
</configuration>