<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="app.properties" />
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper class="top.knxy.fruits.DataBase.DAL.AdminDAL"/>
        <mapper class="top.knxy.fruits.DataBase.DAL.UserDAL"/>
        <mapper class="top.knxy.fruits.DataBase.DAL.GoodDAL"/>
        <mapper class="top.knxy.fruits.DataBase.DAL.OrderDAL"/>
        <mapper class="top.knxy.fruits.DataBase.DAL.GoodTypeDAL"/>
        <mapper class="top.knxy.fruits.DataBase.DAL.GoodDetailDAL"/>
        <mapper class="top.knxy.fruits.DataBase.DAL.GroupGoodDAL"/>
        <mapper class="top.knxy.fruits.DataBase.DAL.GroupOrderDAL"/>
    </mappers>
</configuration>